@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">
                <i class="bi bi-speedometer2"></i> Inventory Dashboard
            </h1>
            <p class="lead text-muted">Welcome to Product Inventory Management System</p>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-primary shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-primary mb-1">Total Products</h6>
                            <h2 class="mb-0">@ViewBag.TotalProducts</h2>
                        </div>
                        <div class="text-primary">
                            <i class="bi bi-box" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-primary bg-opacity-10">
                    <a asp-controller="Product" asp-action="Index" class="text-primary text-decoration-none">
                        View Details <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-success shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-success mb-1">Categories</h6>
                            <h2 class="mb-0">@ViewBag.TotalCategories</h2>
                        </div>
                        <div class="text-success">
                            <i class="bi bi-tags" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-success bg-opacity-10">
                    <a asp-controller="Category" asp-action="Index" class="text-success text-decoration-none">
                        View Details <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-info shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-info mb-1">Total Inventory Value</h6>
                            <h2 class="mb-0">$@ViewBag.TotalValue</h2>
                        </div>
                        <div class="text-info">
                            <i class="bi bi-currency-dollar" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-info bg-opacity-10">
                    <span class="text-info">
                        <i class="bi bi-graph-up"></i> Updated today
                    </span>
                </div>
            </div>
        </div>

    <div class="row g-4 align-content-center"> 
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Product" asp-action="Create" class="btn btn-outline-primary">
                            <i class="bi bi-plus-circle"></i> Add New Product
                        </a>
                        <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success">
                            <i class="bi bi-plus-circle"></i> Add New Category
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-info">
                            <i class="bi bi-list-ul"></i> View All Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
