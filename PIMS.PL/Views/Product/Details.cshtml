@model PIMS.BLL.DTO.ProductDto_s.ProductDto
@{
    ViewData["Title"] = "Product Details";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="bi bi-info-circle"></i> Product Details</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Product Name</dt>
                    <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.CategoryName</span>
                    </dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">$@Model.Price.ToString("N2")</dd>

                    <dt class="col-sm-4">Quantity</dt>
                    <dd class="col-sm-8">
                        @if (Model.Quantity < 10)
                        {
                            <span class="badge bg-danger">@Model.Quantity</span>
                            <small class="text-danger"> (Low Stock)</small>
                        }
                        else if (Model.Quantity < 50)
                        {
                            <span class="badge bg-warning">@Model.Quantity</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Model.Quantity</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Total Value</dt>
                    <dd class="col-sm-8 fw-bold text-primary">
                        $@((Model.Price * Model.Quantity).ToString("N2"))
                    </dd>
                </dl>

                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
