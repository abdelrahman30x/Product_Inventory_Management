@model PIMS.BLL.DTO.ProductDto_s.ProductDto
@{
    ViewData["Title"] = "Delete Product";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Product</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-circle"></i>
                    Are you sure you want to delete this product?
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Product Name</dt>
                    <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@Model.CategoryName</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">$@Model.Price.ToString("N2")</dd>

                    <dt class="col-sm-4">Quantity</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Product
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
