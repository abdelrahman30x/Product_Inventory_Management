@model IEnumerable<PIMS.BLL.DTO.ProductDto_s.ProductDto>
@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="text-primary">
                <i class="bi bi-box"></i> Products
            </h1>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total Value</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="fw-bold">@item.Name</td>
                                <td>
                                    <span class="badge bg-info">@item.CategoryName</span>
                                </td>
                                <td>$@item.Price.ToString("N2")</td>
                                <td>
                                    @if (item.Quantity < 10)
                                    {
                                        <span class="badge bg-danger">@item.Quantity</span>
                                    }
                                    else if (item.Quantity < 50)
                                    {
                                        <span class="badge bg-warning">@item.Quantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@item.Quantity</span>
                                    }
                                </td>
                                <td class="fw-bold">$@((item.Price * item.Quantity).ToString("N2"))</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
